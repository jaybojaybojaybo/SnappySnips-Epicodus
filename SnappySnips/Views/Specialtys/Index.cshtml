@{
  Layout = "_Layout";
}

<div class="w3-container w3-center">
  <h2>Specialties</h2>
  @if (@Model.Count == 0)
  {
    <h3>No Specialties</h3>
  }

  @if (@Model.Count > 0)
  {
    @foreach(var specialty in @Model)
    {
      <div class="w3-container">
        <div class="w3-row" id="specialty">
          <div class="w3-half">
            <h4>@specialty.GetName() | <a href="/specialtys/@specialty.GetId()/delete">Delete</a></h4>
          </div>
          <div class="w3-half">
            @foreach(var stylist in @specialty.GetStylists())
            {
              <h4><a href="/stylists/@stylist.GetId()/details">@stylist.GetName()</a></h4>
            }
          </div>
        </div>
      </div>
      <br>
      <br>
    }
    <h5><a href="/specialtys/delete">Delete all Specialties</a></h5>
  }
  <h3><a href="/specialtys/create">Add New Specialty</a></h3>
  <h3><a href="/stylists">See All Stylists</a></h3>
  <h3><a href="/stylists/create">Add New Stylists</a></h3>
  <h3><a href="/">Back Home</a></h3>
</div>
