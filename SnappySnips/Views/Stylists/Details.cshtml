@{
  Layout = "_Layout";
}


<div class="w3-container w3-center">
  <h2>@Model["currentStylist"].GetName()</h2>
  <h4>Hire Date: @Model["currentStylist"].GetHireDate().ToShortDateString()</h4>
  <h4><a href="/stylists/@Model["currentStylist"].GetId()/edit">Edit @Model["currentStylist"].GetName()'s Details</a></h4>
  <h4>Specialies: </h4>
  @foreach(var specialty in @Model["stylistSpecialtys"])
  {
    <li>@specialty.GetName()</li>
  }
  <h4><a href="/stylists/@Model["currentStylist"].GetId()/specialtys/create">Add Specialty</a></h4>

  <h3>Clients: </h3>
  @if(@Model["stylistClients"].Count == 0)
  {
    <h4>No Clients Yet</h4>
  }
  @foreach(var client in @Model["stylistClients"])
  {
    <li>@client.GetName()</li>
  }
  <h3><a href="/stylists/@Model["currentStylist"].GetId()/clients/create">Add Client</a></h3>
  <h3><a href="/clients">See All Clients</a></h3>
  <h3><a href="/specialtys">See All Specialties</a></h3>
  <h3><a href="/stylists">Back To All Stylists</a></h3>
  <h3><a href="/">Back Home</a></h3>
</div>
