@{
  Layout = "_Layout";
}

<div class="w3-container w3-center">
  <h2>All Stylists</h2>
  @if (@Model.Count == 0)
  {
    <h3>There are no Stylists yet</h3>
  }

  @if (@Model.Count > 0)
  {
    <div class="w3-row">
      <div class="w3-half">
        @foreach(var stylist in @Model)
        {
          <h4><a href="/stylists/@stylist.GetId()/details">@stylist.GetName()</a></h4>
        }
      </div>
      <div class="w3-half">
        @foreach(var stylist in @Model)
        {
          <h4>@stylist.GetHireDate().ToShortDateString()</h4>
        }
      </div>
    </div>
  }
  <h3><a href="/stylists/create">Create new Stylist</a></h3>

  @if (@Model.Count > 0)
  {
    <h3><a href="/clients/create">Create new Client</a></h3>
  }
  <form action="/stylists/delete" method="post">
      <button type="submit" name="button">Fire All Stylists</button>
  </form>
  <h3><a href="/">Back Home</a></h3>
</div>
