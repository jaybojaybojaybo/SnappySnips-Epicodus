@{
  Layout = "_Layout";
}

<div class="w3-container w3-center">
  <h2>All Clients</h2>
  @if (@Model.Count == 0)
  {
    <h3>No Clients </h3>
  }

  @if (@Model.Count > 0)
  {
    <div class="w3-row">
      <div class="w3-half">
        <h3>Client</h3>
        @foreach(var client in @Model)
        {
          <h4>@client.GetName() | <a href="/clients/@client.GetId()/edit">Edit</a> | <a href="/clients/@client.GetId()/delete">Delete</a></h4>
        }
      </div>
      <div class="w3-half">
        <h3>Stylist</h3>
        @foreach(var client in @Model)
        {
          <h4>@client.GetStylist()</h4>
        }
      </div>
    </div>
    <h5><a href="/clients/delete">Delete all Clients</a></h5>
  }
  <h3><a href="/clients/create">Create new Client</a></h3>
  <h3><a href="/stylists">See All Stylists</a></h3>
  <h3><a href="/">Back Home</a></h3>
</div>
